---
import ThemeToggleButton from "./ThemeToggleButton.svelte";
const { current = "" } = Astro.props;
---

<nav>
    <a class={current === "" ? "selected" : ""} href="/">home</a>
    <a class={current === "about" ? "selected" : ""} href="/about">about</a>
    <a class={current === "blog" ? "selected" : ""} href="/blog">blog</a>
    <a class={current === "resume" ? "selected" : ""} href="/resume">resume</a>
    <a class={current === "project" ? "selected" : ""} href="/project"
        >project</a
    >
    <div class="theme-toggle-container">
        <ThemeToggleButton client:load />
    </div>
</nav>

<style>
    nav {
        align-items: center;
        display: flex;
        flex: 1;
        font-family: var(--font-family-sans);
        font-weight: 700;
        justify-content: flex-end;
        text-transform: uppercase;
    }

    a {
        color: inherit;
        text-decoration: none;
        padding: 8px 5px;
        display: block;
        position: relative;
        margin-left: 20px;
        min-width: 50px;
        text-align: center;
    }

    a:not(.selected) {
        opacity: 0.7;
    }

    a::before {
        content: "";
        position: absolute;
        transition: transform 0.3s ease;
        left: 0;
        bottom: 0;
        width: 100%;
        height: 2px;
        background: var(--text-secondary);
        transform: scaleX(0);
    }

    a:hover::before,
    .selected::before {
        transform: scaleX(1);
    }

    .selected::before {
        background: var(--primary-color);
    }

    .theme-toggle-container {
        width: 75px;
    }

    @media screen and (max-width: 600px) {
        a {
            color: inherit;
            text-decoration: none;
            padding: 8px 5px;
            display: block;
            position: relative;
            margin-left: 10px;
            min-width: 30px;
            text-align: center;
        }
    }
</style>
