---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPost from '../../components/BlogPost.astro'

export async function getStaticPaths() {
  const allPosts = await Astro.glob('../../data/blog-posts/*.md');
  
  const uniqueTags = [...new Set(allPosts.map((post) => post.frontmatter.tag).flat())];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) => post.frontmatter.tag.includes(tag));
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;

const title = '${tag}';
const description = 'All the blogs in ' + {tag};
const permalink = `${Astro.site.href}${tag}`;
---
<BaseLayout title={title} description={description} permalink={permalink} current="tag">
  <p>Posts tagged with {tag}</p>
  <ul>
    {posts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title}/>)}
  </ul>
</BaseLayout>