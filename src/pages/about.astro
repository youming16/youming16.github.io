---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "About";
const description = "About your blog.";
const permalink = `${Astro.site.href}about`;
---

<BaseLayout
    title={title}
    description={description}
    permalink={permalink}
    current="about"
>
    <div class="container">
        <h1>About me</h1>
        <p>Will be out soon :)</p>
    </div>
    <hr />
</BaseLayout>

<style>
    a {
        padding: 0.5rem;
    }

    .about-image {
        float: right;
        margin: 0em -7em 2em 2em;
        max-width: 300px;
    }

    .about-image img {
        border-radius: 8px;
        margin-bottom: 1.5em;
    }

    @media (max-width: 1020px) {
        .about-image {
            float: none;
            margin: 0 auto 2em;
        }
    }
</style>
