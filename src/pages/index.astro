---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Eric's blog";
const description = "blog";
const permalink = Astro.site.href;
---

<BaseLayout title={title} description={description} permalink={permalink}>
    <div class="home-container">
        <div class="home-copy">
            <h1>Hi!</h1>
            <!-- <p>
                This is place for presenting <a href="/about" rel="noopener"
                    >myself</a
                >.
            </p> -->
            <p>
                Hi! I am Youming, a <b><i>web developer</i></b> enjoy crafting <i
                    >delightful websites.</i
                >
            </p>
            <p>Learning <i>Computer Science</i> in <b>USYD</b>.</p>
            <p>Also, I love watching <i>Netflix</i></p>
        </div>

        <div class="little-price">
            <picture>
                <img
                    class="hero-image"
                    alt="Illustration of person reading a book"
                    src="/assets/Little Price.jpg"
                    width="300"
                    height="300"
                />
            </picture>
            <p class="caption">The little price is staring at his rose..</p>
        </div>
    </div>
</BaseLayout>

<style>
    a {
        padding: 10px;
    }
    .home-container {
        align-items: center;
        display: flex;
        flex: 1;
        justify-content: center;
        margin: 0em 0;
        min-height: 300px;
    }

    .home-copy {
        flex: 1;
        padding: 0 0em;
        margin: 1em;
    }

    .home-copy h1 {
        font-weight: 700;
        margin-bottom: 0.5em;
        line-height: 1.3;
    }

    .home-copy p {
        font-size: 1.4em;
    }

    .hero-image-container {
        margin: 0 1em;
        text-align: center;
    }

    .hero-image-container picture {
        display: block;
        min-height: 250px;
    }

    .caption {
        font-size: 0.8em;
        font-style: italic;
        text-align: left;
        text-align: center;
    }

    .little-price {
        width: 100%;
        max-width: 300px;
        margin: 1em 7em -5em 1em;
    }

    .contact {
        text-align: left;
        padding-right: 0.2rem;
    }

    @media (max-width: 1200px) {
        p {
            font-size: 1.2em;
        }

        .hero-image {
            max-width: 400px;
        }
    }

    @media (max-width: 800px) {
        .home-container {
            flex-direction: column;
        }

        .home-copy {
            flex: 0;
            padding-bottom: 2em;
            text-align: center;
        }
    }
</style>
